<?xml version="1.0" encoding="utf-8" standalone="no"?><web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>MakeACoffee</servlet-name>
		<servlet-class>com.makeacoffee.cloud.MakeACoffeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MakeACoffee</servlet-name>
		<url-pattern>/makeacoffee</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MakeACoffeeLoad</servlet-name>
		<servlet-class>com.makeacoffee.cloud.MakeACoffeeLoadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MakeACoffeeLoad</servlet-name>
		<url-pattern>/makeacoffeeload</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ObjectifyLoad</servlet-name>
		<servlet-class>com.makeacoffee.cloud.ObjectifyLoadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ObjectifyLoad</servlet-name>
		<url-pattern>/objectifyload</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ObjectifySave</servlet-name>
		<servlet-class>com.makeacoffee.cloud.ObjectifySaveServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ObjectifySave</servlet-name>
		<url-pattern>/objectifysave</url-pattern>
	</servlet-mapping>

	<!-- Configurazione per la gestione delle chiamate da parte del Dispatcher Hub - Jersey -->
	<servlet>
		<servlet-name>DispatcherHub</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
	<init-param>
		<param-name>com.sun.jersey.config.property.packages</param-name>
		<param-value>com.makeacoffee.cloud.dispatcherhub.api</param-value>
	</init-param>
 	<init-param>
		<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
		<param-value>true</param-value>
	</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>DispatcherHub</servlet-name>
		<url-pattern>/gae/*</url-pattern>
	</servlet-mapping>

	<!-- Servlet base per la gestione degli Endpoint -->
	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value>com.makeacoffee.cloud.api.Devices,com.makeacoffee.cloud.api.Houses,com.makeacoffee.cloud.api.Users</param-value>
		</init-param>
	</servlet>

	<!-- Mapping per poter accedere alle API -->
	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>makeacoffee.html</welcome-file>
	</welcome-file-list>

	<!-- Per resettare la ??? ad ogni ricerca -->	
	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>	
</web-app>